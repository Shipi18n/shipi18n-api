{
  "name": "@shipi18n/api",
  "version": "1.0.1",
  "description": "Official Shipi18n API client for Node.js - translate JSON, text, and i18n files",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "i18n",
    "translation",
    "localization",
    "internationalization",
    "locale",
    "translate",
    "i18next",
    "react-intl",
    "next-intl",
    "vue-i18n",
    "json-translation",
    "locale-files",
    "multilingual",
    "l10n",
    "ai-translation",
    "translation-api",
    "shipi18n"
  ],
  "author": "Shipi18n <team@shipi18n.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Shipi18n/shipi18n-api"
  },
  "homepage": "https://shipi18n.com",
  "bugs": {
    "url": "https://github.com/Shipi18n/shipi18n-api/issues"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
